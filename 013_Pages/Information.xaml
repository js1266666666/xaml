<Page x:Class="_013_Pages.Information"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_013_Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="500"
      Title="Information">

    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock HorizontalAlignment="Center" Margin="30" FontSize="20" FontWeight="Bold">Information</TextBlock>
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Width="50">Email: </TextBlock>
                <TextBox Width="150" TextAlignment="Right"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Width="50">Name: </TextBlock>
                <TextBox Width="150" TextAlignment="Right"></TextBox>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
